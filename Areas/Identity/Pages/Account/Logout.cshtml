@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="card border-0 shadow rounded-4 mx-auto">
                <div class="card-header bg-white rounded-top-4 text-center">
                    <h1 class="fw-bold mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body px-4 py-4 text-center">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger rounded-pill px-4 py-2 fw-bold fs-5">
                                <i class="bi bi-box-arrow-right"></i> Click here to log out
                            </button>
                        </form>
                        <p class="mt-3 text-secondary">
                            Logging out will end your session and return you to the home page.
                        </p>
                    }
                    else
                    {
                        <div class="alert alert-success rounded-pill mx-auto px-4 py-2 mb-4">
                            You have successfully logged out of the application.
                        </div>
                        <a href="/" class="btn btn-outline-primary rounded-pill mt-3 px-4 py-2">
                            <i class="bi bi-arrow-left"></i> Back to Home
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
