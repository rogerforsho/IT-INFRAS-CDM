@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow rounded-4 mx-auto" style="max-width: 440px;">
                <div class="card-header bg-white rounded-top-4 text-center">
                    <h1 class="fw-bold mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body px-4 py-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h2 class="h5 fw-semibold text-secondary mb-4">Create a new account to get started</h2>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.FullName" class="form-control rounded-pill" autocomplete="name" aria-required="true" placeholder="Juan Dela Cruz" />
                            <label asp-for="Input.FullName">Full Name</label>
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control rounded-pill" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control rounded-pill" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-bold mb-2 fs-5">Register</button>
                        <div class="mt-3 text-center">
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="link-secondary me-3">Already have an account? Log in</a>
                        </div>
                    </form>
                    <hr class="my-4" />
                    <div class="text-center">
                        <h3 class="fw-semibold mb-3 fs-6">Or register with an external service</h3>
                        @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <p class="text-muted small">
                                No external authentication configured.<br>
                                <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="link-primary" target="_blank">How to set up external registration?</a>
                            </p>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div class="d-flex flex-wrap gap-2 justify-content-center">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-outline-primary rounded-pill px-3" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">
                                            @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
