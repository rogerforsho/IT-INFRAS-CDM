@page
@using CDM.InventorySystem.Models
@model CDM.InventorySystem.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid px-0">
    <div class="mb-4">
        <h1 class="display-5 fw-bold mb-1">CDM Inventory Dashboard</h1>
        <p class="lead text-secondary mb-3">Welcome, @User.Identity.Name!</p>
    </div>

    <!-- Quick Stats -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow stats-card bg-primary text-white rounded-4 text-center">
                <div class="card-body py-3">
                    <h5 class="card-title fw-semibold mb-2">Total Items</h5>
                    <h2 class="card-text display-6 fw-bold mb-0">@Model.TotalItems</h2>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow stats-card bg-warning text-white rounded-4 text-center">
                <div class="card-body py-3">
                    <h5 class="card-title fw-semibold mb-2">Low Stock</h5>
                    <h2 class="card-text display-6 fw-bold mb-0">@Model.LowStockCount</h2>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow stats-card bg-info text-white rounded-4 text-center">
                <div class="card-body py-3">
                    <h5 class="card-title fw-semibold mb-2">Checked Out</h5>
                    <h2 class="card-text display-6 fw-bold mb-0">@Model.CheckedOutCount</h2>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow stats-card bg-danger text-white rounded-4 text-center">
                <div class="card-body py-3">
                    <h5 class="card-title fw-semibold mb-2">Overdue</h5>
                    <h2 class="card-text display-6 fw-bold mb-0">@Model.OverdueCount</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card mb-4 border-0 shadow-sm rounded-4">
        <div class="card-body py-3">
            <h5 class="mb-3 fw-semibold text-secondary">Quick Actions</h5>
            <div class="d-flex flex-wrap gap-2">
                <a class="btn btn-primary px-4" href="/Inventory">View Inventory</a>
                <a class="btn btn-success px-4" href="/Items/Add">Add New Item</a>
                <a class="btn btn-warning px-4 text-white" href="/Items/CheckOut">Check Out Item</a>
                <a class="btn btn-info px-4 text-white" href="/Items/CheckIn">Check In Item</a>
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-secondary px-4" href="/Transactions">View Transactions</a>
                }
            </div>
        </div>
    </div>

    <!-- Low Stock Alerts -->
    @if (Model.LowStockItems.Any())
    {
        <div class="card mb-4 border-warning border-2 shadow-sm rounded-4">
            <div class="card-header bg-warning text-white rounded-top-4">
                <h5 class="mb-0">⚠️ Low Stock Alerts</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Barcode</th>
                                <th>Item Name</th>
                                <th>Current Stock</th>
                                <th>Min Stock</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LowStockItems)
                            {
                                <tr>
                                    <td>@item.BarcodeId</td>
                                    <td>@item.ItemName</td>
                                    <td>
                                        <span class="badge rounded-pill bg-danger px-3 py-2 fs-6">@item.CurrentStock</span>
                                    </td>
                                    <td>@item.MinStockLevel</td>
                                    <td>
                                        @if (item.CurrentStock == 0)
                                        {
                                            <span class="badge rounded-pill bg-danger px-3 py-2">Out of Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill bg-warning text-dark px-3 py-2">Low Stock</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Recent Activity -->
    <div class="card border-0 shadow-sm rounded-4 mt-4">
        <div class="card-header bg-white rounded-top-4">
            <h5 class="mb-0 fw-semibold text-secondary">Recent Activity</h5>
        </div>
        <div class="card-body">
            @if (Model.RecentTransactions.Any())
            {
                <div class="list-group list-group-flush">
                    @foreach (var transaction in Model.RecentTransactions)
                    {
                        <div class="list-group-item d-flex flex-column gap-1 py-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0 fw-medium">
                                    @if (transaction.TransactionType == "CheckOut")
                                    {
                                        <span class="badge bg-success">Check Out</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">Check In</span>
                                    }
                                    <span class="ms-2">@transaction.Item?.ItemName</span>
                                </h6>
                                <small class="text-secondary">@transaction.TransactionDate.ToString("MMM dd, yyyy hh:mm tt")</small>
                            </div>
                            <p class="mb-0">
                                <strong>Borrower:</strong> @(transaction.Borrower?.FullName ?? transaction.Borrower?.Email ?? "Not specified")
                            </p>
                            <small class="text-secondary">Quantity: @transaction.Quantity</small>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No recent activity.</p>
            }
        </div>
    </div>
</div>
