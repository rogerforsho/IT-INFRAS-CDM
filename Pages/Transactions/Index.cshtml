@page
@using CDM.InventorySystem.Models
@model CDM.InventorySystem.Pages.Transactions.IndexModel
@{
    ViewData["Title"] = "Transaction History";
}

<div class="container-fluid px-0">
    <h1 class="fw-bold mb-4">Transaction History</h1>

    <!-- Filters -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body py-3">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Transaction Type</label>
                    <select asp-for="TransactionType" class="form-select rounded-pill py-2" onchange="this.form.submit()">
                        <option value="">All Types</option>
                        <option value="CheckOut">Check Out</option>
                        <option value="CheckIn">Check In</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Status</label>
                    <select asp-for="Status" class="form-select rounded-pill py-2" onchange="this.form.submit()">
                        <option value="">All Status</option>
                        <option value="Active">Active</option>
                        <option value="Returned">Returned</option>
                        <option value="Overdue">Overdue</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Borrower</label>
                    <select asp-for="BorrowerId" class="form-select rounded-pill py-2" onchange="this.form.submit()">
                        <option value="">All Borrowers</option>
                        @foreach (var user in Model.Users)
                        {
                            <option value="@user.Id">@user.FullName</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Date</label>
                    <input asp-for="StartDate" class="form-control rounded-pill py-2" type="date" onchange="this.form.submit()" />
                </div>
            </form>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row g-3 mb-4">
        <div class="col-md-3 col-6">
            <div class="card border-0 shadow stats-card bg-primary text-white rounded-4 text-center">
                <div class="card-body py-3">
                    <h5 class="fw-semibold mb-2">Total Transactions</h5>
                    <h3 class="fw-bold mb-0">@Model.TotalTransactions</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card border-0 shadow stats-card bg-warning text-white rounded-4 text-center">
                <div class="card-body py-3">
                    <h5 class="fw-semibold mb-2">Active Checkouts</h5>
                    <h3 class="fw-bold mb-0">@Model.ActiveCheckouts</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card border-0 shadow stats-card bg-danger text-white rounded-4 text-center">
                <div class="card-body py-3">
                    <h5 class="fw-semibold mb-2">Overdue</h5>
                    <h3 class="fw-bold mb-0">@Model.OverdueCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card border-0 shadow stats-card bg-success text-white rounded-4 text-center">
                <div class="card-body py-3">
                    <h5 class="fw-semibold mb-2">Returned</h5>
                    <h3 class="fw-bold mb-0">@Model.ReturnedCount</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Transactions Table -->
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white rounded-top-4 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold text-secondary">All Transactions</h5>
            <a href="/Transactions/Export" class="btn btn-outline-primary btn-sm rounded-pill px-3">Export to CSV</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle table-borderless">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Item</th>
                            <th>Borrower</th>
                            <th>Processor</th>
                            <th>Quantity</th>
                            <th>Due Date</th>
                            <th>Return Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model.Transactions)
                        {
                            <tr>
                                <td>@transaction.TransactionDate.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    @if (transaction.TransactionType == "CheckOut")
                                    {
                                        <span class="badge bg-success rounded-pill px-3">Check Out</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info rounded-pill px-3">Check In</span>
                                    }
                                </td>
                                <td>
                                    <strong>@transaction.Item?.ItemName</strong>
                                    <br />
                                    <small class="text-muted">@transaction.Item?.BarcodeId</small>
                                </td>
                                <td>@transaction.Borrower?.FullName</td>
                                <td>@transaction.User?.FullName</td>
                                <td>@transaction.Quantity</td>
                                <td>
                                    @if (transaction.IsOverdue && transaction.ReturnDate == null)
                                    {
                                        <span class="text-danger fw-bold">@transaction.DueDate.ToString("MMM dd, yyyy")</span>
                                    }
                                    else
                                    {
                                        @transaction.DueDate.ToString("MMM dd, yyyy")
                                    }
                                </td>
                                <td>
                                    @if (transaction.ReturnDate.HasValue)
                                    {
                                        @transaction.ReturnDate.Value.ToString("MMM dd, yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (transaction.ReturnDate.HasValue)
                                    {
                                        <span class="badge bg-secondary rounded-pill px-3">Returned</span>
                                    }
                                    else if (transaction.IsOverdue)
                                    {
                                        <span class="badge bg-danger rounded-pill px-3">Overdue</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning rounded-pill px-3">Active</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Transactions.Any())
            {
                <div class="text-center py-4">
                    <h4 class="text-muted mb-2">No transactions found</h4>
                    <p class="text-muted">Try adjusting your filters.</p>
                </div>
            }

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Transaction pagination">
                    <ul class="pagination justify-content-center mt-3">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link rounded-pill" href="@Url.Page("", new { page = Model.CurrentPage - 1 })">Previous</a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link rounded-pill" href="@Url.Page("", new { page = i })">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link rounded-pill" href="@Url.Page("", new { page = Model.CurrentPage + 1 })">Next</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
