@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white rounded-top-4">
                    <h1 class="fw-bold mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body py-4 px-4">
                    <p class="lead text-secondary">
                        Use this page to detail your site's privacy policy.
                    </p>
                    <hr />
                    <p>
                        <!-- Put your privacy content here -->
                        We respect your privacy. All personal information and transaction data collected on this site is handled securely and in accordance with applicable law. No data is shared, sold, or published outside of the authorized organization. You may contact our administrator for further requests or clarifications.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
