@page
@model CDM.InventorySystem.Pages.Items.DeleteModel
@{
    ViewData["Title"] = "Delete Item";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="text-danger fw-bold mb-3">
                <i class="bi bi-trash"></i> Delete Item
            </h2>
            <hr />

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger rounded-pill px-4 fw-semibold">
                    @Model.ErrorMessage
                </div>
            }

            <div class="card border-warning border-2 mb-4 shadow-sm rounded-4">
                <div class="card-header bg-warning text-dark rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this item?</h4>
                </div>
                <div class="card-body">
                    <p class="lead fw-medium mb-2 text-warning-emphasis"><strong>This action cannot be undone!</strong></p>
                </div>
            </div>
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-danger text-white fw-bold rounded-top-4">
                    Item Details
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Barcode ID:</dt>
                        <dd class="col-sm-8">@Model.Item.BarcodeId</dd>
                        <dt class="col-sm-4">Item Name:</dt>
                        <dd class="col-sm-8">@Model.Item.ItemName</dd>
                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.Item.Description</dd>
                        <dt class="col-sm-4">Category:</dt>
                        <dd class="col-sm-8">@Model.Item.Category</dd>
                        <dt class="col-sm-4">Current Stock:</dt>
                        <dd class="col-sm-8">@Model.Item.CurrentStock</dd>
                        <dt class="col-sm-4">Location:</dt>
                        <dd class="col-sm-8">@Model.Item.Location</dd>
                    </dl>
                </div>
            </div>

            <form method="post" class="d-flex gap-3 justify-content-center align-items-center mt-4">
                <input type="hidden" asp-for="Item.ItemId" />

                @if (string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <button type="submit" class="btn btn-danger rounded-pill px-4 py-2 fw-bold">
                        <i class="bi bi-trash"></i> Yes, Delete This Item
                    </button>
                }
                <a asp-page="/Inventory/Index" class="btn btn-outline-secondary rounded-pill px-4 py-2">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>
