@page
@model CDM.InventorySystem.Pages.Items.DeleteModel
@{
    ViewData["Title"] = "Delete Item";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Item</h2>
    <hr />

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }

    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this item?</h4>
        <p><strong>This action cannot be undone!</strong></p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5>Item Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Barcode ID:</dt>
                <dd class="col-sm-9">@Model.Item.BarcodeId</dd>

                <dt class="col-sm-3">Item Name:</dt>
                <dd class="col-sm-9">@Model.Item.ItemName</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Model.Item.Description</dd>

                <dt class="col-sm-3">Category:</dt>
                <dd class="col-sm-9">@Model.Item.Category</dd>

                <dt class="col-sm-3">Current Stock:</dt>
                <dd class="col-sm-9">@Model.Item.CurrentStock</dd>

                <dt class="col-sm-3">Location:</dt>
                <dd class="col-sm-9">@Model.Item.Location</dd>
            </dl>
        </div>
    </div>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Item.ItemId" />

        @if (string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Yes, Delete This Item
            </button>
        }

        <a asp-page="/Inventory/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
