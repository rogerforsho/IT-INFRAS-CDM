@page
@model CDM.InventorySystem.Pages.Items.EditModel
@{
    ViewData["Title"] = "Edit Item";
}

<div class="container mt-4">
    <h2>Edit Item</h2>
    <hr />

    <form method="post">
        <input type="hidden" asp-for="Item.ItemId" />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Item.BarcodeId" class="control-label">Barcode ID</label>
                    <input asp-for="Item.BarcodeId" class="form-control" />
                    <span asp-validation-for="Item.BarcodeId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.ItemName" class="control-label">Item Name</label>
                    <input asp-for="Item.ItemName" class="form-control" />
                    <span asp-validation-for="Item.ItemName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.Description" class="control-label">Description</label>
                    <textarea asp-for="Item.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Item.Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.Category" class="control-label">Category</label>
                    <input asp-for="Item.Category" class="form-control" />
                    <span asp-validation-for="Item.Category" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.Brand" class="control-label">Brand</label>
                    <input asp-for="Item.Brand" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.Model" class="control-label">Model</label>
                    <input asp-for="Item.Model" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.Specification" class="control-label">Specification</label>
                    <textarea asp-for="Item.Specification" class="form-control" rows="2"></textarea>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Item.CurrentStock" class="control-label">Current Stock</label>
                    <input asp-for="Item.CurrentStock" class="form-control" type="number" />
                    <span asp-validation-for="Item.CurrentStock" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.TotalStock" class="control-label">Total Stock</label>
                    <input asp-for="Item.TotalStock" class="form-control" type="number" />
                    <span asp-validation-for="Item.TotalStock" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.MinStockLevel" class="control-label">Min Stock Level</label>
                    <input asp-for="Item.MinStockLevel" class="form-control" type="number" />
                    <span asp-validation-for="Item.MinStockLevel" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.Location" class="control-label">Location</label>
                    <input asp-for="Item.Location" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.Condition" class="control-label">Condition</label>
                    <select asp-for="Item.Condition" class="form-control">
                        <option value="Good">Good</option>
                        <option value="Fair">Fair</option>
                        <option value="Poor">Poor</option>
                        <option value="Damaged">Damaged</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.Vendor" class="control-label">Vendor</label>
                    <input asp-for="Item.Vendor" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.PurchaseDate" class="control-label">Purchase Date</label>
                    <input asp-for="Item.PurchaseDate" class="form-control" type="date" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.PurchasePrice" class="control-label">Purchase Price</label>
                    <input asp-for="Item.PurchasePrice" class="form-control" type="number" step="0.01" />
                </div>
            </div>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="/Inventory/Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
