@page
@using CDM.InventorySystem.Models
@using CDM.InventorySystem.Data
@using CDM.InventorySystem.Utilities
@inject InventoryDbContext _context
@model CDM.InventorySystem.Pages.Items.AddModel
@{
    ViewData["Title"] = "Add New Item";

    string generatedBarcode = Guid.NewGuid().ToString("N");
    string barcodeImage = BarcodeGenerator.GenerateBarcodeImage(generatedBarcode);

    if (Model.Item == null)
    {
        Model.Item = new Item { BarcodeId = generatedBarcode };
    }
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow rounded-4">
                <div class="card-header bg-white rounded-top-4">
                    <h1 class="fw-bold mb-0"><i class="bi bi-plus-circle"></i> Add New Item</h1>
                </div>
                <div class="card-body p-4">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/Inventory">Inventory</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add New Item</li>
                        </ol>
                    </nav>
                    <form method="post">
                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Item.ItemName" class="form-control rounded-pill" />
                                    <label asp-for="Item.ItemName">Item Name</label>
                                    <span asp-validation-for="Item.ItemName" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Item.Description" class="form-control rounded-pill" />
                                    <label asp-for="Item.Description">Description</label>
                                    <span asp-validation-for="Item.Description" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Item.Category" class="form-control rounded-pill" />
                                    <label asp-for="Item.Category">Category</label>
                                    <span asp-validation-for="Item.Category" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Item.Location" class="form-control rounded-pill" />
                                    <label asp-for="Item.Location">Location</label>
                                    <span asp-validation-for="Item.Location" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Item.TotalStock" class="form-control rounded-pill" type="number" />
                                    <label asp-for="Item.TotalStock">Total Stock</label>
                                    <span asp-validation-for="Item.TotalStock" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Item.MinStockLevel" class="form-control rounded-pill" type="number" />
                                    <label asp-for="Item.MinStockLevel">Minimum Stock Level</label>
                                    <span asp-validation-for="Item.MinStockLevel" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Item.PurchasePrice" class="form-control rounded-pill" type="number" step="0.01" />
                                    <label asp-for="Item.PurchasePrice">Purchase Price</label>
                                    <span asp-validation-for="Item.PurchasePrice" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Item.Vendor" class="form-control rounded-pill" />
                                    <label asp-for="Item.Vendor">Vendor</label>
                                    <span asp-validation-for="Item.Vendor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mb-4 align-items-center">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Item.BarcodeId" class="form-control rounded-pill" readonly value="@generatedBarcode" />
                                    <label asp-for="Item.BarcodeId">Barcode ID</label>
                                </div>
                            </div>
                            <div class="col-md-6 text-center">
                                <img src="@barcodeImage" alt="Barcode" class="img-fluid rounded-3 border" />
                                <div class="small text-muted mt-2">Barcode is auto-generated</div>
                            </div>
                        </div>

                        <div class="mt-4 mb-0">
                            <button type="submit" class="btn btn-primary rounded-pill px-4 py-2 fw-bold w-100">
                                <i class="bi bi-check2-circle"></i> Add Item
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
